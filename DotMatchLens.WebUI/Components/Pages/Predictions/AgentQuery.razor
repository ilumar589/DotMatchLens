@page "/predictions/query"
@rendermode InteractiveServer
@inject PredictionsApiService PredictionsApi
@inject ISnackbar Snackbar

<PageTitle>AI Query - DotMatchLens</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">AI Agent Query</MudText>

<MudCard>
    <MudCardContent>
        <MudTextField @bind-Value="_query" Label="Ask the AI Agent" Lines="3" 
                      Variant="Variant.Outlined" Placeholder="e.g., What are the chances of Manchester United winning their next match?" />
        <MudButton OnClick="QueryAgent" Variant="Variant.Filled" Color="Color.Primary" 
                   StartIcon="@Icons.Material.Filled.Send" Disabled="_querying" Class="mt-3">
            @if (_querying)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                <MudText Class="ml-2">Querying...</MudText>
            }
            else
            {
                <span>Ask</span>
            }
        </MudButton>
    </MudCardContent>
</MudCard>

@if (!string.IsNullOrEmpty(_response))
{
    <MudCard Class="mt-4">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">AI Response</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText>@_response</MudText>
        </MudCardContent>
    </MudCard>
}

@code {
    private string _query = "";
    private string _response = "";
    private bool _querying = false;

    private async Task QueryAgent()
    {
        if (string.IsNullOrWhiteSpace(_query))
        {
            Snackbar.Add("Please enter a query", Severity.Warning);
            return;
        }

        _querying = true;
        _response = "";

        try
        {
            var result = await PredictionsApi.QueryAgentAsync(_query);
            if (result != null)
            {
                _response = result.Response;
            }
            else
            {
                Snackbar.Add("Failed to get response from AI agent", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error querying AI agent: {ex.Message}", Severity.Error);
        }
        finally
        {
            _querying = false;
        }
    }
}
